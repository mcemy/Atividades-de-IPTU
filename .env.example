ACTIVITY_TYPE_KEY=condominio

# ===== GOOGLE SHEETS (LOGS) =====
SHEET_ID=id_da_planilha_de_logs_aqui

# ===== FILTROS v4.1 =====
# Email do usuário que receberá as atividades criadas
USUARIO_ATIVIDADES_EMAIL=lucastolentino.smart@gmail.com

# Nome do funil onde os deals devem estar (ex: "pos arrematação")
FUNIL_NOME=pos arrematação

# Nome da etapa onde os deals devem estar (ex: "contrato")
ETAPA_NOME=contrato

# ===== MODO TESTE (opcional) =====

RESPONSABILIDADE_CAIXA=id_responsabilidade_caixa

# ===== CONFIGURAÇÕES DE WEBHOOK =====
DEBOUNCE_SECONDS=15
GLOBAL_COOLDOWN_MINUTES=2
CACHE_LOCK_SECONDS=30

